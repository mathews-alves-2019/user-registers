{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["src", "tests"],
    "allowJs": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules"]
}